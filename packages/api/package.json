{
  "name": "@iris-technologies/api",
  "version": "1.0.3",
  "description": "Iris API client for retrieving targeted advertisements",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run clean && npm run build",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor", 
    "version:major": "npm version major",
    "publish:patch": "npm run version:patch && npm publish",
    "publish:minor": "npm run version:minor && npm publish",
    "publish:major": "npm run version:major && npm publish",
    "publish:beta": "npm publish --tag beta",
    "publish:dry-run": "npm publish --dry-run"
  },
  "keywords": [
    "iris",
    "advertising",
    "api",
    "client",
    "ads",
    "typescript",
    "contextual-advertising",
    "ai-ads"
  ],
  "author": "Iris Team",
  "license": "ISC",
  "homepage": "https://github.com/iris-technologies/iris-js#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iris-technologies/iris-js.git",
    "directory": "packages/api"
  },
  "bugs": {
    "url": "https://github.com/iris-technologies/iris-js/issues"
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/jest": "^29.5.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}