  "description": "React components for displaying Iris advertisements",
  "main": "dist/react/src/index.js",
  "types": "dist/react/src/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "require": "./dist/react/src/index.js",
      "default": "./dist/react/src/index.js",
      "types": "./dist/react/src/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run clean && npm run build",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "publish:patch": "npm run version:patch && npm publish",
    "publish:minor": "npm run version:minor && npm publish",
    "publish:major": "npm run version:major && npm publish",
    "publish:beta": "npm publish --tag beta",
    "publish:dry-run": "npm publish --dry-run"
  },
  "keywords": [
    "iris",
    "react",
    "advertising",
    "components",
    "ads",
    "typescript"
