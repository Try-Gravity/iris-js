  "homepage": "https://github.com/Try-Gravity/iris-js#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Try-Gravity/iris-js.git",
    "directory": "packages/react"
  },
  "bugs": {
    "url": "https://github.com/Try-Gravity/iris-js/issues"
  },
  "dependencies": {},
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/jest": "^29.5.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/user-event": "^14.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "ts-jest": "^29.1.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
